{
  // 保存文件自动格式化
  // "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {

    // For ESLint
    "source.fixAll.eslint": true,

    // For TSLint
    "source.fixAll.tslint": true,

    // For Stylelint
    "source.fixAll.stylelint": true
  },

  // 缩进空格长度
  "editor.tabSize": 2,

  // tab 键插入空格
  "editor.insertSpaces": true,

  // 禁用自动检测缩进方式
  "editor.detectIndentation": false,

  // 使用 unix 文件换行风格
  "files.eol": "\n",

}